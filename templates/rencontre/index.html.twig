{% extends 'base.html.twig' %}

{% block title %}Détails du match #{{ rencontre.id }}{% endblock %}

{% block body %}
<div class="container mx-auto p-4 max-w-md">
    <h1 class="text-2xl font-bold mb-6">Détails du match #{{ rencontre.id }}</h1>

    {# Informations de la rencontre #}
    <div class="mb-6 p-4 bg-gray-100 rounded-lg">
        <h2 class="text-xl font-semibold mb-2">Informations du match</h2>
        <p><strong>Joueur 1</strong> {{ rencontre.joueur1.nom }}</p>
        <p><strong>Joueur 2</strong> {{ rencontre.joueur2.nom }}</p>
        <p><strong>Vainqueur</strong> {{ rencontre.gagnant ? rencontre.gagnant.nom : 'Non déterminé' }}</p>
    </div>

    <div class="mt-6">
        <a href="{{ path('rencontre_edit', {'id': rencontre.id}) }}" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 block text-center">
            Modifier les informations du match
        </a>
    </div>
</div>
{% endblock %}
