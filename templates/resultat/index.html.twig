{% extends 'base.html.twig' %}

{% block title %}Liste des résultats{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-md mt-8">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Liste des résultats</h1>

        <div class="mb-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">Matchs</h2>
            {% for resultat in resultats %}
            <div class="w-full flex items-end gap-[20px]">
                <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-gray-600 font-medium">Joueur 1</p>
                        <p class="text-lg font-bold text-blue-600">
                            {{ resultat.Rencontre.joueur1.nom }}
                        </p>
                        <p class="text-gray-600">
                            Score : <span class="font-bold">{{ resultat.scoreJoueur1 }}</span>
                        </p>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-gray-600 font-medium">Joueur 2</p>
                        <p class="text-lg font-bold text-red-600">
                            {{ resultat.Rencontre.joueur2.nom }}
                        </p>
                        <p class="text-gray-600">
                            Score : <span class="font-bold">{{ resultat.scoreJoueur2 }}</span>
                        </p>
                    </div>
                </div>
                {% if app.user %}
                    <a href="{{ path('resultat_show', {'id': resultat.id}) }}"
                        class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 mb-6 rounded-lg text-nowrap focus:outline-none focus:shadow-outline">
                        Voir plus
                    </a>
                {% endif %}
            </div>
            {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('resultat_new') }}" class="bg-blue-600 text-white py-2 px-4 rounded-md text-nowrap hover:bg-blue-700">
                    Ajouter un résultat
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
