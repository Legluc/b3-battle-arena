{% extends 'base.html.twig' %}

{% block title %}Modifier un résultat{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Modifier un résultat</h1>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.scoreJoueur1, null, { 'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'} }) }}
                {{ form_widget(form.scoreJoueur1, { 'attr': {'class': 'w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300'} }) }}
                <p class="text-gray-500 text-xs italic">Saisir un score entre 0 et 3</p>
            </div>

            <div class="mb-4">
                {{ form_label(form.scoreJoueur2, null, { 'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'} }) }}
                {{ form_widget(form.scoreJoueur2, { 'attr': {'class': 'w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300'} }) }}
                <p class="text-gray-500 text-xs italic">Saisir un score entre 0 et 3</p>
            </div>

            <div class="mb-4">
                {{ form_label(form.Rencontre, null, { 'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'} }) }}
                {{ form_widget(form.Rencontre, { 'attr': {'class': 'w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300'} }) }}
            </div>

            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">
                Mettre à jour
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
