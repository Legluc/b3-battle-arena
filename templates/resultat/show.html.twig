{% extends 'base.html.twig' %}

{% block title %}Détails du résultat{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md mt-8">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Détails du résultat</h1>

        <div class="mb-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">Match</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-gray-600 font-medium">Joueur 1</p>
                    <p class="text-lg font-bold text-blue-600">
                        {{ resultat.Rencontre.joueur1.nom }}
                    </p>
                    <p class="text-gray-600">
                        Score : <span class="font-bold">{{ resultat.scoreJoueur1 }}</span>
                    </p>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-gray-600 font-medium">Joueur 2</p>
                    <p class="text-lg font-bold text-red-600">
                        {{ resultat.Rencontre.joueur2.nom }}
                    </p>
                    <p class="text-gray-600">
                        Score : <span class="font-bold">{{ resultat.scoreJoueur2 }}</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="mb-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">Rencontre</h2>
            <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-gray-600">
                    <span class="font-medium">ID :</span> {{ resultat.Rencontre.id }}
                </p>
            </div>
        </div>

        <div class="flex justify-end space-x-4">
            <a href="{{ path('resultat_index') }}"
               class="bg-gray-500 hover:bg-gray-700 text-white py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">
                Retour à la liste
            </a>
            <a href="{{ path('resultat_edit', {'id': resultat.id}) }}"
                class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">
                Modifier
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('resultat_delete', {'id': resultat.id}) }}"
                class="bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">
                Supprimer
            </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
