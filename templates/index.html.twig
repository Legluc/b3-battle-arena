{% extends 'base.html.twig' %}

{% block title %}Accueil - Tournoi Shifumi{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-center">Tournoi Shifumi</h1>

    <div class="max-w-md mx-auto mb-8 p-6 bg-gray-100 rounded-lg">
        <h2 class="text-xl font-semibold text-center mb-4">Connexion</h2>

        <div class="mt-4 flex items-center gap-4">
            <a href="/login" class="w-full mt-4 text-center bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
                Se connecter
            </a>
            <a href="/register" class="w-full mt-4 text-center bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700">
                S'inscrire
            </a>
        </div>
    </div>

    {# Liste des joueurs #}
    <div class="mt-8">
        <h2 class="text-2xl font-bold mb-4">Liste des joueurs inscrits</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200">
                <thead>
                    <tr class="bg-gray-50">
                        <th class="py-2 px-4 border-b">ID</th>
                        <th class="py-2 px-4 border-b">Nom</th>
                        <th class="py-2 px-4 border-b">Email</th>
                        <th class="py-2 px-4 border-b">Date de naissance</th>
                    </tr>
                </thead>
                <tbody>
                    {% for joueur in joueurs %}
                    <tr class="hover:bg-gray-50">
                        <td class="py-2 px-4 border-b text-center">{{ joueur.id }}</td>
                        <td class="py-2 px-4 border-b text-center">{{ joueur.nom }}</td>
                        <td class="py-2 px-4 border-b text-center">{{ joueur.mail }}</td>
                        <td class="py-2 px-4 border-b text-center">{{ joueur.ddn|date('d/m/Y') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
