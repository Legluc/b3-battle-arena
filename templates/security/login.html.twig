{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex flex-col w-full container mx-auto p-4 max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>

    {# Affichage des erreurs de login #}
    {% if error %}
        <div class="mb-4 p-2 bg-red-100 text-red-700 rounded">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {# Formulaire de login (sans form_start/form_end) #}
    <form method="post" action="{{ path('app_login') }}" class="space-y-4">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div>
            <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" id="inputEmail" name="_username" value="{{ last_username }}"
                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm">
        </div>
        <div>
            <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mot de passe</label>
            <input type="password" id="inputPassword" name="_password"
                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm">
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
            Se connecter
        </button>
    </form>

    <a href="{{ path('app_register') }}" class="w-full mt-4 text-center bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 block">
        S'inscrire
    </a>
</div>
{% endblock %}
